  </div>



  <div class="field form-group">
    <%= f.label "手机号码", :class=>'col-sm-5 control-label text-white'%>

    <div class="col-sm-4">
      <%= f.number_field :phone_num, :class=>'form-control' %>
    </div>
  </div>



  <div class="actions col-sm-offset-3 col-sm-6">
    <br>
    <%= f.submit "落单", :class=>'btn btn-lg btn-danger btn-block'%>
  </div>

