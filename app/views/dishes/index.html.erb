<div id="myCarousel" class="carousel slide" data-ride="carousel">


      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>   
        <li data-target="#myCarousel" data-slide-to="1"></li>
      </ol>

      <div id="myCarousel-inner" class="carousel-inner">


        <div class="item active">
          <%= link_to image_tag(@dishes.first.ImageURL), @dishes.first %>
          <div class="container">
            <div class="carousel-caption">
              
            <table class="table transbox">
              <tbody>
                <tr>
                    <td><p><%= link_to @dishes.first.restaurant, @dishes.first.restaurantURL, :class=>'a' %></p></td>
                </tr>
                <tr>
                    <td><p><%= @dishes.first.dish_name %></p></td>
                </tr>
                <tr>
                    <td><p><%= @dishes.first.price %> hkd</p></td>
                </tr>

              </tbody>
            </table>
              <p>还剩<%=@dishes.first.stock - @dishes.first.orders.size %>份<%= link_to 'Order now', @dishes.first, class: "btn btn-lg btn-default btn-block", role: "button" %>&nbsp;&nbsp;&nbsp;</p>
            </div> 
          </div>
        </div>

        <% @dishes.drop(1).each do |dish| %>
          <div class="item">
            <%= link_to image_tag(dish.ImageURL), dish %>
            <div class="container">
              <div class="carousel-caption">

              <table class="table transbox">
                <tbody>
                  <tr>
                      <td><p><%= link_to dish.restaurant, dish.restaurantURL, :class=>'a' %></p></td>
                  </tr>
                  <tr>
                      <td><p><%= dish.dish_name %></p></td>
                  </tr>
                  <tr>
                      <td><p><%= dish.price %> hkd</p></td>
                  </tr>

                </tbody>
              </table>
              <p>还剩<%=dish.stock - dish.orders.size %>份<%= link_to 'Order now', @dishes.first, class: "btn btn-lg btn-default btn-block", role: "button" %>&nbsp;&nbsp;&nbsp;</p>

              </div>
            </div>
          </div>
        <% end %>

      </div>
    
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>


    </div><!-- /.carousel -->
