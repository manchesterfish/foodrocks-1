<div id="myCarousel" class="carousel slide" data-ride="carousel">


      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>   
        <li data-target="#myCarousel" data-slide-to="1"></li>
      </ol>

      <div id="myCarousel-inner" class="carousel-inner">


        <div class="item active">
          <%= link_to image_tag(@dishes.first.ImageURL), @dishes.first %>
          <div class="container">
            <div class="carousel-caption">
              <p><%= link_to 'Order now', @dishes.first, class: "btn btn-lg btn-primary", role: "button" %><p>
            </div> 
          </div>
        </div>

        <% @dishes.drop(1).each do |dish| %>
          <div class="item">
            <%= link_to image_tag(dish.ImageURL), dish %>
            <div class="container">
              <div class="carousel-caption">
              <%= link_to 'Order now', dish, class: "btn btn-lg btn-primary", role: "button" %>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>


    </div><!-- /.carousel -->
